<%= form_for([@league,@game]) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :player_home_id, "Home Player" %><br>
    <%= f.collection_select  :home_player_id, @players, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :player_away_id, "Away Player" %><br>
    <%= f.collection_select  :away_player_id, @players, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :home_score %><br>
    <%= f.text_field :home_score %>
  </div>
  <div class="field">
    <%= f.label :away_score %><br>
    <%= f.text_field :away_score %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
